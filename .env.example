# Docker Compose Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# =============================================================================
# Server Configuration
# =============================================================================
API_PORT=5000
FLASK_DEBUG=false

# =============================================================================
# Database
# =============================================================================
POSTGRES_PASSWORD=change_this_secure_password

# =============================================================================
# API Authentication (optional - leave empty to disable)
# =============================================================================
API_KEY=

# Admin dashboard authentication (recommended for production)
ADMIN_KEY=

# =============================================================================
# Result Caching
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# =============================================================================
# External API Keys
# =============================================================================

# Google Gemini API - for AI reasoning explanations
# Get key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# VirusTotal API - for file/URL reputation checks
# Get key from: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=

# URLScan.io API - for URL scanning
# Get key from: https://urlscan.io/user/profile/
URLSCAN_API_KEY=

# =============================================================================
# Feature Flags (for optional detection checks)
# =============================================================================
# Set to false to disable these checks (useful if no API key or to reduce latency)
ENABLE_URLSCAN=true
ENABLE_VIRUSTOTAL=true

# =============================================================================
# CORS Configuration
# =============================================================================
# Your Cloudflare Tunnel URL (e.g., https://phishing-api.example.com)
CLOUDFLARE_TUNNEL_URL=
# Additional allowed origin for CORS (* allows all)
ALLOWED_ORIGIN=*

# =============================================================================
# Notification Webhooks (for /report endpoint)
# =============================================================================

# Microsoft Teams Incoming Webhook URL
# Create webhook: Teams > Channel > Connectors > Incoming Webhook
TEAMS_WEBHOOK_URL=

# Telegram Bot
# Create bot via @BotFather, get chat_id via @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Twilio WhatsApp
# Get credentials from: https://console.twilio.com
WHATSAPP_TWILIO_SID=
WHATSAPP_TWILIO_TOKEN=
WHATSAPP_FROM=+14155238886
WHATSAPP_TO=

# =============================================================================
# Cloudflare Tunnel (optional)
# =============================================================================
# Create tunnel: cloudflared tunnel create phishing-api
# Then copy the token from the dashboard
CLOUDFLARE_TUNNEL_TOKEN=
