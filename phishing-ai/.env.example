# Phishing Detection API Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Server Configuration
# =============================================================================
PORT=5000
FLASK_DEBUG=false

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string (automatically set in Docker)
DATABASE_URL=postgresql://phishing:your_password@localhost:5432/phishing_db

# =============================================================================
# API Authentication (optional - leave empty to disable)
# =============================================================================
API_KEY=

# Admin dashboard authentication (recommended for production)
ADMIN_KEY=

# =============================================================================
# CORS Configuration
# =============================================================================
# Your Cloudflare Tunnel URL (e.g., https://phishing-api.example.com)
CLOUDFLARE_TUNNEL_URL=
# Additional allowed origin for CORS
ALLOWED_ORIGIN=*

# =============================================================================
# Result Caching
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# =============================================================================
# Input Validation
# =============================================================================
# Maximum email size in bytes (default: 25MB)
MAX_EML_SIZE=26214400

# =============================================================================
# External API Keys
# =============================================================================

# Google Gemini API - for AI reasoning explanations
# Get key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# VirusTotal API - for file/URL reputation checks
# Get key from: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=

# URLScan.io API - for URL scanning
# Get key from: https://urlscan.io/user/profile/
URLSCAN_API_KEY=

# Feature flags for optional checks
ENABLE_URLSCAN=true
ENABLE_VIRUSTOTAL=true

# =============================================================================
# Notification Webhooks (for /report endpoint)
# =============================================================================

# Microsoft Teams Incoming Webhook URL
# Create webhook: Teams > Channel > Connectors > Incoming Webhook
TEAMS_WEBHOOK_URL=

# Telegram Bot
# Create bot via @BotFather, get chat_id via @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Twilio WhatsApp
# Get credentials from: https://console.twilio.com
WHATSAPP_TWILIO_SID=
WHATSAPP_TWILIO_TOKEN=
WHATSAPP_FROM=+14155238886
WHATSAPP_TO=

# =============================================================================
# Rate Limiting
# =============================================================================
# Redis URL for distributed rate limiting (optional, uses in-memory by default)
REDIS_URL=
